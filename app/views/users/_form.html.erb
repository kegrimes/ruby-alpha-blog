<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @user %>
            <%= form_with model: @user, local: true, data: { turbo: false }, class: "shadow-sm p-3 mb-3 bg-info rounded" do |f| %>
                <div class="form-group row mb-4">
                    <%= f.label :username, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <%= f.label :email, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter an email address" %>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <%= f.label :password, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <div class="col-auto">
                        <%= f.submit class: "btn btn-outline-light btn-lg px-4" %>
                    </div>
                </div>
            <% end %>
        </div>

    </div>

    <div class="row justify-content-center mt-2">
        <div class="col-auto">
            <%= link_to '[ Cancel and Return to articles listing ]', articles_path %>
        </div>
    </div>
</div>