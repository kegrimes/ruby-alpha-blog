<%= render 'shared/errors', obj: @category %>
<%= form_with model: @category, local: true, data: { turbo: false }, class: "shadow-sm p-3 mb-3 bg-info rounded" do |f| %>
    <div class="form-group row mb-4">
        <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-auto">
            <%= f.submit class: "btn btn-outline-light btn-lg px-4" %>
        </div>
    </div>
<% end %>